<%include ../partials/header%>
<h1 style="text-align: center;">Add A New Campground Here</h1>
    <div style="width: 30%; margin: 0px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" name="campground[name]" placeholder="Enter campground name">
            </div>
            <div class="form-group">
                <input type="number" class="form-control" name="campground[price]" placeholder="Enter campground $price/night" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="campground[image]" placeholder="Enter campground image url">
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="campground[description]" placeholder="Enter campground description">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-dark btn-block">create</button>
            </div>
        </form>
    </div>
<%include ../partials/footer%>